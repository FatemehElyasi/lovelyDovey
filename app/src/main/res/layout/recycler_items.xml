<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:elevation="26dp"
    tools:ignore="ExtraText"
    android:background="?attr/background"
    >

    <TextView
        android:id="@+id/txtDateRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="2023/8/3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitleRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="24dp"
        android:text="love is true"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewStoryRecycler"
        app:layout_constraintEnd_toEndOf="@+id/txtDateRecycler"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtDateRecycler" />

    <ImageView
        android:id="@+id/imageViewStoryRecycler"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="4dp"
        android:contentDescription="add your image "
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/background0" />
    />


</androidx.constraintlayout.widget.ConstraintLayout>